<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginActivity">
    <ImageView
            android:src="@drawable/bg"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/iv_login_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/login_background_image_description"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" android:cropToPadding="false" android:visibility="gone"
    />
    <ImageView
            android:src="@drawable/logo_1"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/iv_login_logo"
            app:layout_constraintStart_toStartOf="@+id/iv_login_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.19999999"
            android:layout_marginTop="32dp" android:layout_marginBottom="32dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_logo" android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp" android:id="@+id/ll_login_form" android:visibility="visible">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp" app:cardUseCompatPadding="true" android:layout_marginBottom="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:src="@drawable/ic_ico_username"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imageView"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="24dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/et_login_username" app:layout_constraintStart_toEndOf="@+id/imageView"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        android:hint="@string/login_input_placeholder_username" android:text="tesonet"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp" app:cardUseCompatPadding="true" android:layout_marginBottom="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:src="@drawable/ic_ico_lock"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/et_login_password"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
                        android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="0.562"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2" android:layout_marginEnd="24dp"
                        android:singleLine="true" android:hint="@string/login_input_placeholder_password"
                        android:text="partyanimal"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp" app:cardUseCompatPadding="true">
            <Button
                    android:text="@string/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/btn_login"
                    android:background="@color/colorLogInButtonBackground"
                    android:textColor="@color/colorLogInButtonText" android:textAllCaps="false"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/pb_login_fetching_loading" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:indeterminate="true" app:layout_constraintTop_toBottomOf="@+id/iv_login_logo"
            android:layout_marginTop="128dp" android:visibility="gone"/>
    <TextView
            android:text="Fetching the list..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_login_fetching_text"
            app:layout_constraintTop_toBottomOf="@+id/pb_login_fetching_loading"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            tools:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>