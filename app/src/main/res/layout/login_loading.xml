<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.LoginActivity">

    <ProgressBar
            style="@style/LoginProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/pb_login_fetching_loading" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Fetching the list..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_login_fetching_text"
            app:layout_constraintTop_toBottomOf="@+id/pb_login_fetching_loading"
            android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>



